.products {
  padding: 30rpx 20rpx 30rpx 20rpx;
  min-height: 100vh;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: start;
  width: 100%;
}
.products .column {
  margin-top: 30%;
  width: 48%;
}
.products .column .product_card {
  text-align: center;
  margin-top: 5%;
  border-radius: 10rpx;
  box-shadow: 0px 10px 20px 0px #c7c9c7;
}
.products .column .product_card navigator image {
  width: 100%;
  height: 320rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: #fff;
  transition: transform 200ms;
}
.products .column .product_card navigator image:hover {
  transform: scale(1.01);
  box-shadow: -2px 8px 15px -12px #647878;
}
.products .column .product_card navigator .middle {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  text-align: start;
  margin-left: 10rpx;
}
.products .column .product_card navigator .middle .product_name {
  font-size: 30rpx;
  font-family: '.AppleSystemUIFont';
  line-height: 36rpx;
  color: #000000;
  width: 70%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.products .column .product_card navigator .middle .product_price {
  font-size: 30rpx;
  font-family: '.AppleSystemUIFont';
  line-height: 36rpx;
  color: #ff7a00;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 10rpx;
}
.products .column .product_card .bottom {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  text-align: start;
  margin-left: 10rpx;
}
.products .column .product_card .bottom .locinfo {
  font-size: 20rpx;
  font-family: '.AppleSystemUIFont';
  line-height: 24rpx;
  color: #979797;
  width: 50%;
}
.products .column .product_card .bottom .operator {
  display: flex;
}
.products .column .product_card .bottom .operator image {
  background-color: #fafafa;
  margin-top: 30rpx;
  margin-right: 10rpx;
  width: 45rpx;
}
