.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc( 100vh - 90rpx );
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
  background-color: rgba(224, 222, 222, 0.479);
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 23rpx;
  font-weight: 300;
}
.cates .cates_container .left_menu .active {
  color: #c0d195ce;
  font-weight: bolder;
  background-color: #fff;
  border-left: 8rpx solid currentColor;
}
.cates .cates_container .right_content {
  flex: 5;
}
.cates .cates_container .right_content .product_type {
  padding: 30rpx 20rpx 30rpx 20rpx;
}
.cates .cates_container .right_content .product_type .product_title {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-radius: 20rpx;
  width: 100px;
  height: 50px;
  background-color: #ffffff;
  border: 1px solid rgba(221, 221, 221, 0.671);
  box-shadow: 0px 1px 5px -1px #c7c9c7;
  font-weight: 400;
  margin-left: 10rpx;
}
.cates .cates_container .right_content .product_type .active {
  border: 2px solid rgba(124, 124, 124, 0.671);
  font-weight: bolder;
  background-color: #fff;
}
.cates .cates_container .right_content .product_type .product_list navigator {
  display: flex;
  margin: 10rpx;
  background-color: #f8f8f8;
}
.cates .cates_container .right_content .product_type .product_list navigator image {
  flex: 1;
}
.cates .cates_container .right_content .product_type .product_list .right {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cates .cates_container .right_content .product_type .product_list .right .product_name {
  padding-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cates .cates_container .right_content .product_type .product_list .right .product_price {
  padding-bottom: 10rpx;
}
