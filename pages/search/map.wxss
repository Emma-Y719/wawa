page {
  height: 100%;
}
page .header {
  width: 100%;
  position: fixed;
  left: 5%;
  top: 6%;
}
page .header .custom-nav-bar {
  background-color: transparent;
  /* 设置导航栏的背景颜色 */
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 35%;
}
page .header .custom-nav-bar .backicon {
  width: 60rpx;
}
page .header .custom-nav-bar .keys {
  /* 设置搜索栏 */
  height: 60rpx;
  border-radius: 50rpx;
  border: 1.5px solid #8ec31f;
  /* 设置边框样式，1.5px 宽度，边框 */
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-left: 5%;
}
page .header .custom-nav-bar .keys .city {
  padding: 20rpx;
  flex: 2;
}
page .header .custom-nav-bar .keys .city .location {
  display: flex;
  align-items: center;
  justify-content: center;
}
page .header .custom-nav-bar .keys .city .location text {
  font-size: 28rpx;
  font-weight: 600;
}
page .header .custom-nav-bar .keys .city .location .line {
  width: 14px;
}
page .header .custom-nav-bar .keys .type {
  flex: 5;
  display: flex;
}
page .header .custom-nav-bar .keys .type .inter {
  border-right: 1px solid #a6acb3;
}
page .header .custom-nav-bar .keys .type input {
  margin-left: 10rpx;
}
page .header .cates {
  height: 5%;
  width: 92%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 3.5%;
}
page .header .cates .university {
  background-color: #8ec31f;
  border-radius: 15rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-left: 30rpx;
  padding: 10rpx;
  flex: 1;
  text-align: center;
  /* 文本水平居中对齐 */
  color: #ededed;
}
page .header .cates .campus {
  background-color: #8ec31f;
  border-radius: 15rpx;
  padding: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
  flex: 1;
  margin-left: 25rpx;
  text-align: center;
  /* 文本水平居中对齐 */
  color: #ededed;
}
page .header .cates .sort {
  background-color: #8ec31f;
  border-radius: 15rpx;
  font-size: 24rpx;
  font-weight: bold;
  padding: 10rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  flex: 1;
  text-align: center;
  /* 文本水平居中对齐 */
  color: #ededed;
}
page .map_container {
  height: 48%;
  width: 100%;
}
page .map_container .map {
  height: 100%;
  width: 100%;
  position: relative;
}
page .map_container .map .SelectColumn {
  height: 100rpx;
  width: 88%;
  border-radius: 50rpx;
  background-color: #242c19;
  /* 设置背景颜色 */
  position: fixed;
  left: 50%;
  top: 91.5%;
  transform: translate(-50%, -50%);
}
page .map_container .map .SelectColumn .firstlogo {
  height: 10%;
  width: 10%;
  position: absolute;
  left: 12%;
  top: 20%;
  transform: translate(-50%, -50%);
}
page .map_container .map .SelectColumn .secondlogo {
  height: 7%;
  width: 7%;
  position: absolute;
  left: 30%;
  top: 28%;
  transform: translate(-50%, -50%);
}
page .map_container .map .SelectColumn .thirdlogo {
  height: 8%;
  width: 8%;
  position: absolute;
  left: 70%;
  top: 28%;
  transform: translate(-50%, -50%);
}
page .map_container .map .SelectColumn .fourthlogo {
  height: 8%;
  width: 8%;
  position: absolute;
  left: 88%;
  top: 28%;
  transform: translate(-50%, -50%);
}
page .map_container .map .SelectColumn .fraglogo {
  height: 20%;
  width: 20%;
  position: absolute;
  left: 50%;
  top: -40%;
  transform: translate(-50%, -50%);
}
page .map_container .map .right_content {
  position: absolute;
  left: 50%;
  top: 72%;
  transform: translate(-50%, -50%);
}
page .map_container .map .right_content .productType {
  padding: 30rpx 20rpx 30rpx 20rpx;
  display: inline-flex;
  /* 横向滚动需要设置 display: inline-flex; */
  transition: transform 0.3s ease;
  /* 添加平滑的切换效果 */
}
page .map_container .map .right_content .productType .product_list navigator {
  display: flex;
  width: 600rpx;
  height: 260rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  background-color: #F8F8F8;
}
page .map_container .map .right_content .productType .product_list navigator image {
  flex: 2;
  width: 100%;
  height: 85%;
  margin-left: 20rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
}
page .map_container .map .right_content .productType .product_list navigator .right {
  flex: 3;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
page .map_container .map .right_content .productType .product_list navigator .right .product_name {
  flex: 1;
  font-size: 35rpx;
  font-weight: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
page .map_container .map .right_content .productType .product_list navigator .right .product_des {
  flex: 2;
  font-size: 22rpx;
  word-wrap: break-word;
  overflow-wrap: hidden;
  text-overflow: ellipsis;
}
page .map_container .map .right_content .productType .product_list navigator .right .product_price {
  flex: 1;
  word-wrap: break-word;
  overflow-wrap: hidden;
  text-overflow: ellipsis;
  font-size: 35rpx;
  font-weight: 500rpx;
}
