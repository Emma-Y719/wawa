page {
  height: 100%;
}
page .custom-nav-bar {
  height: 10.5%;
  /* 设置导航栏的高度 */
  background-color: #ececec7c;
  /* 设置导航栏的背景颜色 */
  display: flex;
  flex-direction: row;
}
page .custom-nav-bar .back-btn {
  flex: 1;
  padding-right: 20rpx;
  top: 87rpx;
  width: 30rpx;
  /* 设置返回按钮的宽度 */
  height: 70rpx;
  /* 设置返回按钮的高度 */
  background-color: #ffffff00;
  /* 设置背景颜色 */
  border: none;
  /* 移除边框样式 */
  align-items: center;
}
page .custom-nav-bar .back-btn .icon {
  width: 26px;
  height: 26px;
}
page .custom-nav-bar .keys {
  /* 设置搜索栏 */
  flex: 10;
  width: 55%;
  height: 60rpx;
  border-radius: 50rpx;
  border: 1.5px solid #8ec31f;
  /* 设置边框样式，1.5px 宽度，边框 */
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  top: 95rpx;
  margin-left: 20rpx;
  margin-right: 200rpx;
  position: relative;
}
page .custom-nav-bar .keys .city {
  padding: 30rpx;
  flex: 2;
}
page .custom-nav-bar .keys .city .location {
  font-size: 28rpx;
  font-weight: 600;
}
page .custom-nav-bar .keys .city .location .line {
  display: inline-block;
  width: 6px;
  height: 6px;
  border-bottom: 2px solid red;
  border-right: 2px solid red;
  transform: rotate(45deg);
  margin-bottom: 5rpx;
  margin-left: 10rpx;
}
page .custom-nav-bar .keys .city .inter {
  margin-left: 20rpx;
  border-right: 1px solid #a6acb3;
}
page .custom-nav-bar .keys .type {
  flex: 5;
}
page .cates {
  background-color: #ececec7c;
  /* 设置导航栏的背景颜色 */
  height: 5%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
page .cates .university {
  background-color: #8ec31f;
  border-radius: 15rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-left: 30rpx;
  padding: 10rpx;
  flex: 1;
  text-align: center;
  /* 文本水平居中对齐 */
  color: #ededed;
}
page .cates .campus {
  background-color: #8ec31f;
  border-radius: 15rpx;
  padding: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
  flex: 1;
  margin-left: 25rpx;
  text-align: center;
  /* 文本水平居中对齐 */
  color: #ededed;
}
page .cates .sort {
  background-color: #8ec31f;
  border-radius: 15rpx;
  font-size: 24rpx;
  font-weight: bold;
  padding: 10rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  flex: 1;
  text-align: center;
  /* 文本水平居中对齐 */
  color: #ededed;
}
page .map_container {
  height: 84.5%;
  width: 100%;
}
page .map_container .map {
  height: 100%;
  width: 100%;
  position: relative;
}
page .map_container .map .SelectColumn {
  height: 100rpx;
  width: 88%;
  border-radius: 50rpx;
  background-color: #242c19;
  /* 设置背景颜色 */
  position: fixed;
  left: 50%;
  top: 91.5%;
  transform: translate(-50%, -50%);
}
page .map_container .map .SelectColumn .firstlogo {
  height: 10%;
  width: 10%;
  position: absolute;
  left: 12%;
  top: 20%;
  transform: translate(-50%, -50%);
}
page .map_container .map .SelectColumn .secondlogo {
  height: 7%;
  width: 7%;
  position: absolute;
  left: 30%;
  top: 28%;
  transform: translate(-50%, -50%);
}
page .map_container .map .SelectColumn .thirdlogo {
  height: 8%;
  width: 8%;
  position: absolute;
  left: 70%;
  top: 28%;
  transform: translate(-50%, -50%);
}
page .map_container .map .SelectColumn .fourthlogo {
  height: 8%;
  width: 8%;
  position: absolute;
  left: 88%;
  top: 28%;
  transform: translate(-50%, -50%);
}
page .map_container .map .SelectColumn .fraglogo {
  height: 20%;
  width: 20%;
  position: absolute;
  left: 50%;
  top: -40%;
  transform: translate(-50%, -50%);
}
page .map_container .map .right_content {
  position: absolute;
  left: 50%;
  top: 72%;
  transform: translate(-50%, -50%);
}
page .map_container .map .right_content .productType {
  padding: 30rpx 20rpx 30rpx 20rpx;
  display: inline-flex;
  /* 横向滚动需要设置 display: inline-flex; */
  transition: transform 0.3s ease;
  /* 添加平滑的切换效果 */
}
page .map_container .map .right_content .productType .product_list navigator {
  display: flex;
  width: 600rpx;
  height: 260rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  background-color: #F8F8F8;
}
page .map_container .map .right_content .productType .product_list navigator image {
  flex: 2;
  width: 100%;
  height: 85%;
  margin-left: 20rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
}
page .map_container .map .right_content .productType .product_list navigator .right {
  flex: 3;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
page .map_container .map .right_content .productType .product_list navigator .right .product_name {
  flex: 1;
  font-size: 35rpx;
  font-weight: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
page .map_container .map .right_content .productType .product_list navigator .right .product_des {
  flex: 2;
  font-size: 22rpx;
  word-wrap: break-word;
  overflow-wrap: hidden;
  text-overflow: ellipsis;
}
page .map_container .map .right_content .productType .product_list navigator .right .product_price {
  flex: 1;
  word-wrap: break-word;
  overflow-wrap: hidden;
  text-overflow: ellipsis;
  font-size: 35rpx;
  font-weight: 500rpx;
}
