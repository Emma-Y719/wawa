<!--pages/storage/index.wxml-->
<page>


  <view class="back">
<view class="createStorage">

    <view class="dis">
    <text class="content">服务近距离物品交易 为常用二手群长时效容纳物品信息~</text>
    <view class="cbtn" bindtap="handleCreate">
    申请创建群聊物品库
    </view>
   </view>
   <image mode="widthFix" src="/icons/student.jpg">
   </image>
   
   </view>
  </view>
  <filt id="filt"/>
<view class="my">
  我加入的
</view>

<view class="storages">
      <view class="storage_list"
          wx:for="{{storageList}}"
          wx:for-item="storage"
          wx:key="id"
        >
        <navigator url="/pages/storage/detail?id={{storage.identity}}">
          <image src="{{storage.pic}}" mode="aspectFill"/>
          <view class="middle">
            <view class="storage_name">{{storage.name}}</view>
            <view class="info">{{storage.productNum}}件物品,{{storage.userNum}}蛙友</view>
          </view>
          <view class="right" bindtap="promote">
          <navigator url="/pages/promote/index?storage={{storage.identity}}">去发布</navigator>
          </view>
          
        </navigator>
        
      </view>
</view>

<!-- <ad-custom unit-id="adunit-e9f635f70708225c"></ad-custom> -->
<!-- <ad-custom style="width: 60%;" unit-id="adunit-687792caae7d8ec8"></ad-custom> -->
<view class="search">
  <text>待加入的</text>
  <view class="storage_list"
          wx:for="{{searchStorageList}}"
          wx:for-item="storage"
          wx:key="id"
        >
        <navigator url="/pages/storage/detail?id={{storage.identity}}">
          <image src="{{storage.pic}}" mode="aspectFill"/>
          <view class="middle">
            <view class="storage_name">{{storage.name}}</view>
            <view class="info">{{storage.productNum}}件物品,{{storage.userNum}}蛙友</view>
          </view>
          <view class="right"   bindtap="joinstorage" data-index="{{index}}" >
          <navigator >加入</navigator>
          </view>
          
        </navigator>
        
      </view>
</view>



</page>