page {
  box-sizing: border-box;
  color: #333;
  width: 100%;
  background: linear-gradient(to bottom, #96c03c, #ffffff);
  /* 渐变色背景样式 */
  font-family: "Bitstream Vera Serif Bold";
  padding: 14rpx;
  height: 100%;
}
page .custom-nav-bar {
  display: flex;
  height: 12%;
  /* 设置导航栏的高度 */
  position: relative;
  font-weight: bold;
}
page .custom-nav-bar .text {
  position: absolute;
  bottom: 15%;
  /* 距离底部的位置 */
  left: 50%;
  transform: translateX(-50%);
  font-size: 14px;
  color: #333;
}
page .hello {
  color: #333;
  font-size: 40rpx;
  font-weight: 700;
  margin-left: 30rpx;
}
page .introduce {
  color: #333;
  font-size: 25rpx;
  font-weight: 700;
  margin-left: 30rpx;
  margin-top: 15rpx;
}
page .info {
  background-color: #fff;
  border-radius: 25rpx;
  height: 290rpx;
  padding: 5rpx;
  position: relative;
  top: 50rpx;
  width: 96%;
  display: flex;
  margin: 10rpx;
  box-shadow: 0px 10px 20px 0px #b7b7bb;
}
page .info .info-content {
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 28rpx;
  position: relative;
}
page .info .info-content .title {
  display: flex;
  flex-direction: row;
}
page .info .info-content .title .location {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
page .info .info-content .title .location .line {
  display: inline-block;
  width: 6px;
  height: 6px;
  border-bottom: 2px solid red;
  border-right: 2px solid red;
  transform: rotate(45deg);
  margin-bottom: 6rpx;
}
page .info .info-content .type {
  margin-top: 40rpx;
  color: #e0e0e0;
  font-size: 37rpx;
  font-weight: 600;
}
page .info .info-content .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: #8ec31f;
  border-radius: 50rpx;
  font-size: 35rpx;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  font-weight: bold;
  color: #fff;
  margin-top: 40rpx;
  width: 620rpx;
  height: 80rpx;
}
page .info .info-content .logo {
  bottom: 170rpx;
  height: 330rpx;
  position: absolute;
  left: 360rpx;
  width: 340rpx;
}
page .index_bigType {
  position: relative;
  top: 4%;
  background-color: #f7f7f700;
  display: flex;
  height: 9%;
  width: 98%;
  flex-direction: row;
}
page .index_bigType .bigTypeRow {
  display: flex;
  flex: 3;
  align-items: center;
}
page .index_bigType .bigTypeRow navigator {
  flex: 1;
  margin-left: 10rpx;
  height: 100%;
  background-color: #ffffff;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
page .index_bigType .bigTypeRow navigator image {
  width: 80%;
  height: 80%;
}
page .index_bigType .bigTypeRow navigator text {
  text-align: center;
  font-size: 24rpx;
}
page .index_bigType .hotIntro {
  display: flex;
  flex: 2;
  flex-direction: row;
  margin-left: 10rpx;
}
page .index_bigType .hotIntro .titles {
  flex: 2;
  height: 100%;
  border-radius: 30rpx;
  background-color: #ffffff;
  box-shadow: 0px 10px 20px 0px #b7b7bb;
}
page .index_bigType .hotIntro .titles .icon {
  height: 38%;
  width: 38%;
  position: relative;
  left: 20%;
  top: 30%;
  transform: translate(-50%, -50%);
}
page .index_bigType .hotIntro .titles .campus_title {
  font-size: 16rpx;
  font-weight: 400;
  text-align: left;
  color: #000000;
  position: relative;
  left: 90%;
  top: 20%;
  transform: translate(-50%, -50%);
}
page .index_bigType .hotIntro .titles .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: #5a995200;
  border-radius: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  color: #3a3a3a;
  position: relative;
  left: 70%;
  top: -20%;
  transform: translate(-50%, -50%);
}
page .next_hang {
  width: 98%;
  position: relative;
  top: 5%;
  height: 215rpx;
  display: flex;
}
page .next_hang .chat_cecond_container {
  border-radius: 30rpx;
  margin-left: 10rpx;
  background-color: #fff;
  height: 100%;
  width: 250rpx;
  box-shadow: 0px 10px 20px 0px #b7b7bb;
}
page .next_hang .chat_cecond_container .icon {
  height: 58%;
  width: 58%;
  position: relative;
  left: 50%;
  top: 32%;
  transform: translate(-50%, -50%);
}
page .next_hang .chat_cecond_container .chat_cecond_text {
  bottom: 20rpx;
  /* 距离底部的位置 */
  margin-top: 40rpx;
  text-align: center;
  font-size: 15px;
  font-weight: bold;
}
page .next_hang .index_swiper {
  width: 450rpx;
  margin-left: 25rpx;
  border-radius: 30rpx;
  background-color: #fff;
  box-shadow: 0px 10px 20px 0px #b7b7bb;
}
page .next_hang .index_swiper swiper swiper-item {
  height: 230rpx;
}
page .next_hang .index_swiper swiper swiper-item navigator {
  display: flex;
  height: 200rpx;
}
page .next_hang .index_swiper swiper swiper-item navigator image {
  margin-top: 20rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
  width: 55%;
  height: 165rpx;
}
page .next_hang .index_swiper swiper swiper-item navigator .swiperinfo {
  width: 50%;
  margin-left: 20rpx;
  margin-top: 15rpx;
}
page .next_hang .index_swiper swiper swiper-item navigator .swiperinfo .title {
  font-size: 24rpx;
  font-weight: 500;
}
page .next_hang .index_swiper swiper swiper-item navigator .swiperinfo .storage {
  display: flex;
}
page .next_hang .index_swiper swiper swiper-item navigator .swiperinfo .storage image {
  width: 30rpx;
  height: 30rpx;
}
page .next_hang .index_swiper swiper swiper-item navigator .swiperinfo .storage text {
  display: flex;
  align-items: center;
  text-align: center;
  font-size: 20rpx;
}
page .next_hang .index_swiper swiper swiper-item navigator .swiperinfo .price {
  font-size: 22rpx;
}
page .next_hang .index_swiper swiper swiper-item navigator .swiperinfo .swiper_university {
  margin-top: 5rpx;
  font-size: 20rpx;
}
page .next_hang .index_swiper swiper swiper-item navigator .swiperinfo .swiper_campus {
  font-size: 20rpx;
}
page .map_container {
  height: 22%;
  width: 96%;
  border-radius: 30rpx;
  box-shadow: 0px 10px 20px 0px #b7b7bb;
  margin-left: 10rpx;
  overflow: hidden;
  position: relative;
  top: 7%;
}
page .map_container .map {
  height: 100%;
  width: 100%;
}
