                </view>
        
              </view>
   
              <view class="chat_message"> 
                   {{room.lastmsg}} 
              </view>

            </view>
            <view class="date">
            <view class="day">{{room.lastmsgtime[0]}}</view>
            <view class="time">{{room.lastmsgtime[1]}}</view>
            </view>
            <view class="right">
              <image class="productPic"src="{{room.product.pic}}" mode="aspectFill"/>
            </view>


    </navigator>
  </view>
</view>
<view class="systemList" wx:if="{{systemdisplay}}">
  <view class="system"
  wx:for="{{systemList}}"
  wx:for-item="room"
