              </view>
   
              <view class="chat_message"> 
                  {{room.lastsender}} : {{room.lastmsg}} 
              </view>

            </view>
            <view class="date">
            <view class="day">{{room.lastmsgtime[0]}}</view>
            <view class="time">{{room.lastmsgtime[1]}}</view>
            </view>
            <view class="right">
              <image class="productPic"src="{{room.product.pic}}" mode="aspectFill"/>
