.custom-nav-bar {
  position: fixed;
  left: 5%;
  top: 6.5%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 35%;
  z-index: 999;
  /* 设置层级，确保位于其他内容之上 */
}
.custom-nav-bar .backicon {
  width: 50rpx;
}
.custom-nav-bar .title {
  margin-left: 30rpx;
  font-size: 33rpx;
}
.fixinfo {
  position: fixed;
  width: 100%;
  /* 宽度占满整个页面 */
  background-color: #fff;
  /* 背景颜色 */
  z-index: 99;
  /* 设置层级，确保位于其他内容之上 */
}
.fixinfo .productinfo {
  display: flex;
  margin-left: 40rpx;
  margin-top: 25%;
}
.fixinfo .productinfo image {
  border-radius: 20rpx;
  width: 120rpx;
  height: 120rpx;
}
.fixinfo .productinfo .other {
  margin-left: 50rpx;
  width: 50%;
}
.fixinfo .productinfo .other .infos {
  display: flex;
}
.fixinfo .productinfo .other .infos .title {
  font-size: 30rpx;
}
.fixinfo .productinfo .other .infos .status {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 25rpx;
  font-weight: 500;
  margin-left: 30rpx;
}
.fixinfo .productinfo .other .price {
  font-size: 20rpx;
}
.fixinfo .productinfo .other .university {
  font-size: 20rpx;
}
.fixinfo .productinfo .other .campus {
  font-size: 20rpx;
}
.fixinfo .productinfo .statusInfo {
  width: 120rpx;
}
.fixinfo .productinfo .statusInfo .complete {
  margin-top: 50rpx;
  padding: 4rpx 0;
  background-color: #87c03e;
  border-radius: 10rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-family: '.AppleSystemUIFont';
  line-height: 30rpx;
  color: #ffffff;
}
.fixinfo .warn {
  margin-top: 2%;
  font-size: 24rpx;
  background-color: #f79d35;
  height: 60rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container {
  height: 100%;
  position: relative;
  top: 22%;
  bottom: 0;
  left: 0;
  right: 0;
  padding-top: 80rpx;
}
