<view class="custom-nav-bar">
  <image bindtap="navigateBack" class="backicon" src="/images/back_icon.png" mode="widthFix"></image>
  <view class="title">
    {{title}}
  </view>
</view>
<view class="fixinfo">
  <navigator class="productinfo" url="/pages/product_detail/index?id={{productObj.identity}}">
  <image src="{{product.pic}}" mode="aspectFill"/>

  <view class="other">
    <view class="infos">
      <view class="title">
      {{product.name}}
      </view>
      <view class="status" wx:if="{{product.status==2}}">状态:下架</view>
      <view class="status" wx:if="{{product.status==0}}">状态:在售</view>
    </view>
    <view class="price">
    ¥{{product.price}}
    </view>
    <view class="university">
      {{product.university}}
    </view>
    <view class="campus">
      {{product.campus}} / 1.5km
    </view>
  </view>
  <view class="statusInfo">

    <view class="complete" wx:if="{{product.userid!=haoyou_openid}}"bindtap="onComplete">完成交易</view>
  </view>

  </navigator>
  <view class="warn">
      ⚠️注意个人财产安全!协商一致、买方取到货物之后，请卖方点击完成交易
  </view>
</view>

<view class="container" style="{{containerStyle}}">
  <chatroom
    style="width: 100%; height: 100%"
    envId="{{chatRoomEnvId}}"
    collection="{{chatRoomCollection}}"
    groupId="{{chatRoomGroupId}}"
    groupName="{{chatRoomGroupName}}"
    userInfo="{{userInfo}}"
    onGetUserInfo="{{onGetUserInfo}}"
    getOpenID="{{getOpenID}}"
    backgroundimage="{{backgroundimage}}"
    haoyou_openid="{{haoyou_openid}}"
    product="{{product}}"
  ></chatroom>
</view>
