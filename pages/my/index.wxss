page .user_info {
  width: 100%;
  height: 50%;
}
page .user_info .background-image {
  width: 100%;
  height: 50%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  /* 将背景图片置于底层 */
}
page .user_info .user_info_bg {
  margin-top: 20%;
  position: relative;
}
page .user_info .user_info_bg .user_info_wrap {
  position: relative;
  margin-left: 30rpx;
  display: flex;
}
page .user_info .user_info_bg .user_info_wrap image {
  width: 190rpx;
  height: 190rpx;
  border-radius: 50%;
}
page .user_info .user_info_bg .user_info_wrap .detail {
  margin-left: 30rpx;
  margin-top: 15rpx;
}
page .user_info .user_info_bg .user_info_wrap .detail .user_name {
  height: 45rpx;
  font-size: 35rpx;
  font-weight: 500;
}
page .user_info .user_info_bg .user_info_wrap .detail .user_acc {
  margin-top: 10rpx;
  font-size: 28rpx;
  font-weight: 400;
}
page .user_info .user_info_bg .user_info_wrap .detail .user_aff {
  margin-top: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
}
page .user_info .order_wrap {
  margin-left: 30rpx;
  margin-top: 60rpx;
  color: #fff8e8;
  font-size: 40rpx;
}
page .user_info .order_wrap .order_content {
  display: flex;
  flex-wrap: wrap;
  text-align: center;
}
page .user_info .order_wrap .order_content navigator {
  width: 25%;
}
page .user_info .order_wrap .order_content navigator .order-icon {
  position: relative;
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  box-sizing: border-box;
  left: 0rpx;
  top: 20 rpx;
}
page .user_info .order_wrap .order_content navigator .order_name {
  margin-top: 15rpx;
  color: #f1f1fa;
  font-size: 32rpx;
  font-weight: 400;
  background-color: transparent;
}
page .product {
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 2%;
  margin-right: 2%;
  margin-top: 40rpx;
  height: 300rpx;
}
page .product .title {
  display: flex;
}
page .product .title .ptype {
  height: 70rpx;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 35rpx;
}
page .product .title .active {
  height: 70rpx;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 35rpx;
  background-color: #f3e8d2;
  border-radius: 40rpx;
}
page .product .product_list {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  margin-top: 20rpx;
}
page .product .product_list .product_card {
  width: 45%;
  text-align: start;
  margin: 15rpx;
}
page .product .product_list .product_card navigator image {
  width: 100%;
  border-radius: 35rpx;
  box-shadow: 0px 10px 20px 0px #c7c9c7;
  background-color: #fff;
  transition: transform 200ms;
}
page .product .product_list .product_card navigator image:hover {
  transform: scale(1.01);
  box-shadow: -2px 8px 15px -12px #647878;
}
page .product .product_list .product_card navigator .product_name {
  margin-left: 20rpx;
  margin-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 35rpx;
  margin-bottom: 10rpx;
}
page .product .product_list .product_card .bottom {
  margin-left: 20rpx;
  display: flex;
}
page .product .product_list .product_card .bottom .product_price {
  flex: 1;
  font-size: 40rpx;
  color: #ff7800;
}
page .product .product_list .product_card .bottom .button1 {
  font-size: 25rpx;
  margin-left: 20rpx;
  width: 80rpx;
  height: 50rpx;
  color: lavender;
  background-color: #88bb1e;
  border-radius: 20rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  align-items: center;
}
page .product .product_list .product_card .bottom .button2 {
  margin-left: 10rpx;
  margin-right: 20rpx;
  font-size: 25rpx;
  color: lavender;
  background-color: #88bb1e;
  border-radius: 20rpx;
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  align-items: center;
}
page .bottom {
  height: 200rpx;
}
