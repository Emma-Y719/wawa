page .product_display {
  background-color: #a7e9bb;
  border-radius: 40rpx;
  margin-left: 2%;
  margin-right: 2%;
}
page .product_display .product_list {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  margin-top: 20rpx;
}
page .product_display .product_list .product_card {
  width: 45%;
  text-align: start;
  margin: 15rpx;
  background-color: #fafafa;
  border-radius: 20rpx;
}
page .product_display .product_list .product_card navigator image {
  width: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  box-shadow: 0px 10px 20px 0px #c7c9c7;
  background-color: #fff;
  transition: transform 200ms;
}
page .product_display .product_list .product_card navigator image:hover {
  transform: scale(1.01);
  box-shadow: -2px 8px 15px -12px #647878;
}
page .product_display .product_list .product_card navigator .product_name {
  margin-left: 20rpx;
  margin-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 35rpx;
  margin-bottom: 10rpx;
}
page .product_display .product_list .product_card .bottom {
  margin-left: 20rpx;
  display: flex;
  height: 80rpx;
}
page .product_display .product_list .product_card .bottom .product_price {
  flex: 1;
  font-size: 40rpx;
  color: #ff7800;
}
page .product_display .product_list .product_card .bottom .button1 {
  font-size: 25rpx;
