page {
  width: 90%;
  margin-left: 5%;
  font-family: '.AppleSystemUIFont';
  position: relative;
}
page swiper {
  margin-top: 20rpx;
  height: 410rpx;
}
page swiper swiper-item image {
  width: 100%;
  height: 360rpx;
  background-color: #ffffff;
  border-radius: 50rpx;
}
page .product_title {
  display: flex;
  justify-content: space-between;
}
page .product_title .product_name {
  font-size: 32rpx;
  line-height: 36rpx;
  color: #000000;
}
page .product_title .share {
  padding: 4rpx 0;
  margin-right: 0;
  background-color: #87c03e;
  border-radius: 10rpx;
  width: 100rpx;
  height: 40rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #ffffff;
  text-align: center;
}
page .product_info {
  margin-top: 14rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
page .product_info .product_price .price {
  color: #ff7a00;
  font-size: 34rpx;
  line-height: 40rpx;
}
page .product_info .product_price .price_description {
  font-size: 24rpx;
  line-height: 28rpx;
  color: #979797;
}
page .product_info .product_detail {
  font-size: 24rpx;
  line-height: 28rpx;
  color: #979797;
}
page .product_descripion {
  margin-top: 24rpx;
  color: #000000;
  font-size: 28rpx;
  line-height: 40rpx;
}
page .tip {
  font-size: 24rpx;
  line-height: 28rpx;
  color: #979797;
  margin: 12rpx 0 80rpx;
  display: flex;
  align-items: center;
}
page .tip .icon_tip {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
page .userContainer .userTitle {
  margin-left: 10rpx;
  margin-top: 50rpx;
  display: flex;
  align-items: center;
}
page .userContainer .userTitle .pic {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}
page .userContainer .userTitle .userInfo {
  display: inline-block;
}
page .userContainer .userTitle .userInfo .name {
  font-size: 32rpx;
  line-height: 36rpx;
  color: #333333;
  margin-bottom: 24rpx;
}
page .userContainer .userTitle .userInfo .detail {
  font-size: 24rpx;
  line-height: 28rpx;
  color: #979797;
}
page .userContainer .userProduct {
  width: 100%;
  display: flex;
  overflow: scroll;
}
page .userContainer .userProduct image {
  display: inline-block;
  margin-right: 24rpx;
  border-radius: 12rpx;
  width: 140rpx;
  height: 140rpx;
}
page .ad {
  margin-top: 50rpx;
}
page .recommend {
  margin-top: 46rpx;
}
page .recommend .title {
  font-size: 24rpx;
  line-height: 30rpx;
  color: #000000;
  display: block;
  text-align: center;
}
page .recommend .location {
  font-size: 24rpx;
  line-height: 30rpx;
  color: #979797;
  display: block;
  text-align: center;
  margin-top: 4rpx;
}
page .btm_tool {
  padding: 20rpx 48rpx 20rpx 52rpx;
  height: 100rpx;
  width: 100%;
  background-color: #333333;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
page .btm_tool .firstlogo {
  width: 60rpx;
  height: 60rpx;
}
page .btm_tool .secondlogo {
  width: 60rpx;
  height: 60rpx;
}
page .btm_tool .buttons {
  display: flex;
  font-size: 32rpx;
  color: #333333;
  line-height: 36rpx;
}
page .btm_tool .buttons .btn_cart {
  padding: 12rpx 0;
  background-color: #d9d9d9;
  border-radius: 10rpx;
  width: 180rpx;
  height: 58rpx;
  text-align: center;
  margin-right: 8rpx;
}
page .btm_tool .buttons .btn_buy {
  padding: 12rpx 0;
  background-color: #87c03e;
  border-radius: 10rpx;
  width: 180rpx;
  height: 58rpx;
  text-align: center;
}
