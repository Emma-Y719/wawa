page {
  height: 100%;
  width: 100vw;
  background-color: #ececec;
  /* 设置导航栏的背景颜色 */
}
page .header {
  width: 100%;
  position: fixed;
  left: 5%;
  top: 6%;
}
page .header .custom-nav-bar {
  background-color: transparent;
  /* 设置导航栏的背景颜色 */
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 35%;
}
page .header .custom-nav-bar .backicon {
  width: 60rpx;
}
page .header .custom-nav-bar .keys {
  /* 设置搜索栏 */
  height: 60rpx;
  border-radius: 50rpx;
  border: 1.5px solid #8ec31f;
  /* 设置边框样式，1.5px 宽度，边框 */
  background-color: #ffffff;
  justify-content: center;
  align-items: center;
  margin-left: 5%;
}
page .header .custom-nav-bar .keys .type {
  display: flex;
}
page .header .custom-nav-bar .keys .type input {
  height: 60rpx;
  width: 300rpx;
  font-size: 26rpx;
  margin-left: 30rpx;
}
page .products {
  padding: 30rpx 20rpx 30rpx 20rpx;
}
page .products .product_list {
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  margin-top: 30%;
}
page .products .product_list .product_card {
  width: 46%;
  text-align: center;
  margin: 2%;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0px 10px 20px 0px #c7c9c7;
}
page .products .product_list .product_card navigator image {
  width: 100%;
  height: 320rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: #fff;
  transition: transform 200ms;
}
page .products .product_list .product_card navigator image:hover {
  transform: scale(1.01);
  box-shadow: -2px 8px 15px -12px #647878;
}
page .products .product_list .product_card navigator .middle {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  text-align: start;
  margin-left: 10rpx;
}
page .products .product_list .product_card navigator .middle .product_name {
  font-size: 30rpx;
  font-family: '.AppleSystemUIFont';
  line-height: 36rpx;
  color: #000000;
  width: 70%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
page .products .product_list .product_card navigator .middle .product_price {
  font-size: 30rpx;
  font-family: '.AppleSystemUIFont';
  line-height: 36rpx;
  color: #ff7a00;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 10rpx;
}
page .products .product_list .product_card .bottom {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  text-align: start;
  margin-left: 10rpx;
}
page .products .product_list .product_card .bottom .locinfo {
  font-size: 20rpx;
  font-family: '.AppleSystemUIFont';
  line-height: 24rpx;
  color: #979797;
  width: 50%;
}
page .products .product_list .product_card .bottom .operator {
  display: flex;
}
page .products .product_list .product_card .bottom .operator image {
  background-color: #fafafa;
  margin-top: 30rpx;
  margin-right: 10rpx;
  width: 45rpx;
}
page .bottom {
  height: 200rpx;
}
