.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc( 100vh - 90rpx );
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
}
.cates .cates_container .left_menu .menu_item {
  margin-top: 10rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .active {
  font-weight: bolder;
  color: #88bb1e;
  border-left: 15rpx solid currentColor;
}
.cates .cates_container .right_content {
  flex: 5;
}
.cates .cates_container .right_content .productType {
  padding: 30rpx 20rpx 30rpx 20rpx;
}
.cates .cates_container .right_content .productType .productType_title {
  font-weight: bolder;
}
.cates .cates_container .right_content .productType .product_list navigator {
  display: flex;
  margin-top: 30rpx;
  background-color: #F8F8F8;
  border-radius: 30rpx;
  padding: 20rpx;
}
.cates .cates_container .right_content .productType .product_list navigator image {
  width: 180rpx;
  height: 180rpx;
}
.cates .cates_container .right_content .productType .product_list navigator .right {
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 20rpx;
}
.cates .cates_container .right_content .productType .product_list navigator .right .product_name {
  padding-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 35rpx;
}
.cates .cates_container .right_content .productType .product_list navigator .right .product_price {
  padding-bottom: 10rpx;
}
